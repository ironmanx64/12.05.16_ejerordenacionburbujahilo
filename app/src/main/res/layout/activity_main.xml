<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.android.davidch.a120516_ejerordenacionburbujahilo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numeros a ordenar"
        android:id="@+id/textView"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2numerosdesordenados"
        android:background="#f18585"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordenados"
        android:id="@+id/textView3"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView4numerosordenados"
        android:background="#f18585"
        android:layout_marginLeft="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordenar"
        android:id="@+id/buttonordenar"
        android:layout_gravity="right"
        android:layout_marginTop="120dp"
        android:layout_marginRight="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/button2cancelar"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView5Enespera"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="#f37575" />

    <TextView
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView6porcentual"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="#f37575" />

</LinearLayout>
